<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/asset_item_background"
    android:layout_marginBottom="8dp">

    <!-- Prvi red: simbol i količina -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvAssetSymbol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="BTC"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"/>

        <TextView
            android:id="@+id/tvAssetQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Količina: 2.5"
            android:textSize="16sp"
            android:textColor="@color/primary_text"
            android:gravity="end"/>
    </LinearLayout>

    <!-- Drugi red: cijena, vrijednost, gain/loss -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trenutna cijena"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"/>
            <TextView
                android:id="@+id/tvCurrentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$60,000"
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vrijednost"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"/>
            <TextView
                android:id="@+id/tvCurrentValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$150,000"
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zarada/gubitak"
                android:textSize="12sp"
                android:textColor="@color/secondary_text"/>
            <TextView
                android:id="@+id/tvGainLoss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+$12,000 (+8%)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/gain_green"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivMore"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_more_vert"
            android:contentDescription="@string/more_options"
            android:tint="@color/secondary_text"
            android:layout_marginStart="8dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
