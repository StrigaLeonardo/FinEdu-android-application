<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/dark_theme_background"
        android:paddingTop="32dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:fitsSystemWindows="true">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="320dp"
            android:layout_height="78dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/finedu"
            android:layout_gravity="center_horizontal"/>

        <!-- Red za izbor simbola i timeframea -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/spinnerSymbol"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:spinnerMode="dropdown"/>

            <Spinner
                android:id="@+id/spinnerTimeframe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

        <!-- Prikaz trenutne cijene desno -->
        <TextView
            android:id="@+id/tvCurrentPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trenutna cijena: -"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Candlestick chart -->
        <com.github.mikephil.charting.charts.CandleStickChart
            android:id="@+id/chartCandle"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@android:color/transparent"/>

        <!-- Order Entry UI -->

        <LinearLayout
            android:id="@+id/orderEntryLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Odabir tipa naloga -->
            <RadioGroup
                android:id="@+id/orderTypeGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbMarket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Market"
                    android:textColor="@android:color/white" />

                <RadioButton
                    android:id="@+id/rbLimit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limit"
                    android:textColor="@android:color/white" />
            </RadioGroup>

            <!-- Odabir strane -->
            <RadioGroup
                android:id="@+id/orderSideGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buy"
                    android:textColor="@android:color/white" />

                <RadioButton
                    android:id="@+id/rbSell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sell"
                    android:textColor="@android:color/white" />
            </RadioGroup>

            <!-- Unos količine -->
            <EditText
                android:id="@+id/etOrderAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:hint="Količina"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF" />

            <!-- Unos cijene (samo za Limit order) -->
            <EditText
                android:id="@+id/etOrderPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autofillHints=""
                android:hint="Cijena"
                android:importantForAutofill="no"
                android:inputType="numberDecimal"
                android:textColor="@android:color/white"
                android:textColorHint="#80FFFFFF"
                android:visibility="gone" />

            <!-- Prikaz iznosa trejda (samo za Market order) -->
            <TextView
                android:id="@+id/tvTradeTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Ukupno: -"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:visibility="gone" />

            <!-- Gumb za potvrdu -->
            <Button
                android:id="@+id/btnSubmitOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Potvrdi nalog" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvPositionsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Otvorene pozicije"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp"/>


        <LinearLayout
            android:id="@+id/positionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"/>

        <!-- Naslov sekcije za postavljene naloge -->
        <TextView
            android:id="@+id/tvOrdersTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Postavljeni nalozi"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="4dp"/>

        <!-- Container za postavljene naloge -->
        <LinearLayout
            android:id="@+id/ordersContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <!-- Orderbook prikaz -->
        <LinearLayout
            android:id="@+id/orderbookContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"/>
    </LinearLayout>
</ScrollView>
